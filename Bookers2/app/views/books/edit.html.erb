<div class="container">
    <div>
        <h1>Editing Book</h1>
        <%= form_for(@book) do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title,class:"col-xs-12" %>
            <h4>Opinion</h4>
            <%= f.text_area :body,class:"col-xs-12" %>
            <nav><%= f.submit 'Update Book',class:"btn btn-primary col-xs-12" %></nav>
        <% end %>

        <%= link_to "Show", book_path(@book) %>
        <%= link_to "Back", books_path %> 
    </div>

</div>

